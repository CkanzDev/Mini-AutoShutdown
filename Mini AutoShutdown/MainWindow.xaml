<Window x:Class="Mini_AutoShutdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_AutoShutdown"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Mini AutoShutdown" Height="450" Width="800">
    <Grid>
        <Button x:Name="TenMinutesButton" Content="10 Minutes" HorizontalAlignment="Left" Margin="78,27,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="TenMinutesButton_Click"/>
        <Button x:Name="FifteenMinutesButton" Content="15 Minutes" HorizontalAlignment="Left" Margin="78,107,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="FifteenMinutesButton_Click"/>
        <Button x:Name="ThirtyMinutesButton" Content="30 Minutes" HorizontalAlignment="Left" Margin="253,107,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="ThirtyMinutesButton_Click"/>
        <Button x:Name="OneHourButton" Content="1 Hour" HorizontalAlignment="Left" Margin="78,189,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="OneHourButton_Click"/>
        <Button x:Name="TwoHourButton" Content="2 Hour" HorizontalAlignment="Left" Margin="253,189,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="TwoHourButton_Click"/>
        <Button x:Name="ThreeHourButton" Content="3 Hour" HorizontalAlignment="Left" Margin="430,189,0,0" VerticalAlignment="Top" Height="63" Width="147" FontFamily="Arial Black" FontSize="18" Click="ThreeHourButton_Click"/>
        <Label x:Name="TimerLabel" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,175,0,0" FontFamily="Arial Black" FontSize="36" Width="738" HorizontalContentAlignment="Center" Visibility="Hidden"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="29" Width="148" FontFamily="Arial Black" FontSize="18" Click="CancelButton_Click" Visibility="Hidden"/>
        <Label x:Name="Version" Content="1.0" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top" Width="181" FontFamily="Arial"/>
        <Label x:Name="Watermark" Content="Mini AutoShutdown By Ckanz :)" HorizontalAlignment="Left" Margin="588,376,0,0" VerticalAlignment="Top" Width="181" HorizontalContentAlignment="Right" FontFamily="Arial"/>
    </Grid>
</Window>
